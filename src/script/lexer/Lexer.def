#ifndef MI_LEXER_DEF
  #define MI_LEXER_DEF

#ifndef LEXER_IS_NAME
  #define LEXER_IS_NAME(c) ((c >= 'A' && c <= 'Z') || (c >= 'a' && c <= 'z') || c == '_' || c == '$')
#endif
#ifndef LEXER_IS_DIGIT
  #define LEXER_IS_DIGIT(c) (c >= '0' && c <= '9')
#endif
#ifndef LEXER_IS_PUNCTUATOR
  #define LEXER_IS_PUNCTUATOR(c) (c == '+' || c == '-' || c == '*' || c == '/' || c == '%' || \
      c == '=' || c == '&' || c == '|' || c == '^' || c == '~' || c == '!' || c == '?' || \
      c == '[' || c == ']' || c == '(' || c == ')' || c == '{' || c == '}' || c == ':' || \
      c == '.' || c == ',' || c == '<' || c == '>')
#endif
#ifndef LEXER_IS_BLANK
  #define LEXER_IS_BLANK(c) (c == ' ' || c == '\t' || c == '\n')
#endif
#ifndef LEXER_INT
  #define LEXER_INT(i) ({int* p = malloc(sizeof(int)); *p = i; p;})
#endif

#endif
